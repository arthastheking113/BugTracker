@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Create";
}


<br /><br /><br />
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <form asp-controller="Projects" asp-action="Create" method="post">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create New Project</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CompanyId" class="control-label"></label>
                            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Upload Image</label>
                            <input type="file" name="image" />
                        </div>

                        <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Create new Porject" class="btn btn-success float-left mr-2">

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </form>
        </div>
        <div class="col-2"></div>
    </div>
   
</section>
<!-- /.content -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
