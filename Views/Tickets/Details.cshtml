                                                        </dd>
                                                        <dt class="col-sm-2">
                                                            @Html.DisplayNameFor(model => model.Ownner)
                                                        </dt>
                                                        <dd class="col-sm-10">
                                                            @Html.DisplayFor(model => model.Ownner.FullName)
                                                        </dd>
                                                        <dt class="col-sm-2">
                                                            @Html.DisplayNameFor(model => model.Project)
                                                        </dt>
